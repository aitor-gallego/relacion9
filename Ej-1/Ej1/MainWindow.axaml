<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="250"
        Width="350"
        Height="250"
        CanResize="False"
        x:Class="Ej1.MainWindow"
        Title="Ej1">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Width="300" Margin="0,0,0,20" Text="Calcular la suma de los primeros n-números. El valor de n se lee desde el teclado" TextWrapping="Wrap" />            
            <TextBox Width="150"
                     Watermark="Número"
                     UseFloatingWatermark="True"
                     Name="tbNumero"/>
            <TextBox Width="150"
                     Watermark="Resultaddo"
                     Focusable="False"
                     Margin="10"
                     Name="tbResultado"/>
            <DockPanel HorizontalAlignment="Center">
                <Button Content="Calcular" Click="Calcular_OnClick"></Button>
                <Button Content="Cerrar" Click="BtnSalir_OnClick" Margin="15,0,0,0"></Button>
            </DockPanel>
        </StackPanel>
        
</Window>
