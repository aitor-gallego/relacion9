<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
        Width="300"
        Height="300"
        CanResize="False"
        x:Class="Ej3.MainWindow"
        Title="Ej3">
    <StackPanel Width="200" VerticalAlignment="Center">
        <TextBox Name="Inicial" Margin="5" Width="150" Watermark="Nº Inicial"/>
        <TextBox Name="Final" Margin="5" Width="150" Watermark="Nº Final"/>
        <Button Name="SumarBtn" Click="SumarBtn_OnClick" Margin="5,5,5,10" Width="150" Foreground="White" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="Indigo" Content="Sumar"/>
        <Separator/>
        <Label Name="Resultado" Margin="5,10,0,0" Width="200" Height="30" CornerRadius="4" BorderThickness="0" Focusable="False" 
               Background="MidnightBlue" HorizontalAlignment="Center" Foreground="White"/>
    </StackPanel>
</Window>
