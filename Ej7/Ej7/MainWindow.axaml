<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="430"
        Width="700"
        Height="700"
        CanResize="False"
        x:Class="Ej7.MainWindow"
        RequestedThemeVariant="Dark"
        Title="Ej7">
    <StackPanel >
        <Rectangle Margin="30" Fill="White" Width="450" Height="200"/>
        <StackPanel Margin="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Text="Rojo" BorderThickness="0"  VerticalAlignment="Center"/>
            <Slider Width="400" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Text="Verde" BorderThickness="0"  VerticalAlignment="Center"/>
            <Slider Width="400" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Text="Azul" BorderThickness="0"  VerticalAlignment="Center"/>
            <Slider Width="400" VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
